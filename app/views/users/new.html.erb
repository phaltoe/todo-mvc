<section class="todoapp">
  <header class="header">
    <h1>Signup!</h1>
    <%= form_for(@user) do |f| %>
      <%= f.text_field :email, class: "new-todo", placeholder: "Register your e-mail here!" %>
      <%= f.text_field :password, class: "new-todo", placeholder: "Choose a password" %>
      <%= f.text_field :password_confirmation, class: "new-todo", placeholder: "Please confirm your password" %>
      <%= f.submit %>
    <% end %>  
  </header>
  <footer class="footer">

  </footer>
</section>