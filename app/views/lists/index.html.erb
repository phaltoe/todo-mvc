<section class="todoapp">
  <header class="header">
    <h1>TODO List</h1>
    <%= form_for(@list) do |f| %>
      <%= f.text_field :name, :class => "new-todo", :placeholder => (@list.errors.full_messages_for(:name).first || "Create a new List!") %>
      <%= f.submit :style => "display: none" %>
    <% end %>
  </header>
  <section class="main" style="display: block">
    <input class="toggle-all" type="checkbox">
    <label for="toggle-all">Mark all as complete</label>
    <ul class="todo-list">
      <% @lists.each do |list| %>
        <li>
          <div class="view">
            <label><%= link_to list.name, list_path(list) %></label>
          </div>  
        </li>
       <% end %> 
    </ul>
  </section>
  <footer class="footer">
    <p> You're logged in as: <%= current_user.email %></p>
  </footer>
</section>