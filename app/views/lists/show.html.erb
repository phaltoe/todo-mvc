<section class="todoapp">
  <header class="header">
    <h1><%= @list.name %></h1>
    <%= form_for([@list, @item]) do |f| %>
    <%# [@list, @item] = Item.new, :url => list_items_path(@list) %>
      <%= f.text_field :description, :class => "new-todo", :placeholder => (@item.errors.full_messages_for(:description).first || "Create a new item!") %>
      <%= f.submit :style => "display: none" %>
    <% end %>
  </header>
  <section class="main" style="display: block;">
    <input class="toggle-all" type="checkbox">
    <label for="toggle-all">Mark all as complete</label>
    <ul class="todo-list">
      <% @list.items.each do |item| %>
        <li class="<%= "completed" if item.complete? %>">
          <div class="view">
            <form action="/">
              <input class="toggle" type="checkbox" <%= "checked='checked'" if item.complete? %>>
              <label><%= item.description %></label>
            </form>  
          </div>
        </li>
      <% end %>  
    </ul>
  </section>
  <footer class="footer" style="display: none;">

  </footer>
</section>